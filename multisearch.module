/**
 * Implements hook_block_info().
 */
function multisearch_block_info() {
  $blocks['multisearch'] = array(
    'info' => t('Multisearch'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  return $blocks;
}

